@model IEnumerable<Blog.Models.AppUser>
@{
    ViewData["Title"] = "Users";
    Layout = "_AdminLayout";
}

<!-- Admin Content -->
<div class="admin-content clearfix">
    <div class="button-group">
        <a asp-controller="Admin" asp-action="CreateUser" class="btn btn-sm">Add User</a>
        <a asp-controller="Admin" asp-action="Users" class="btn btn-sm">Manage Users</a>
    </div>
    <div class="">
        <h2 style="text-align: center;">Manage Users</h2>
        <table>
            <thead>
            <th>N</th>
            <th>Username</th>
            <th colspan="3">Action</th>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr class="rec">
                    <td>1</td>
                    <td>
                        <a href="#">@item.Name</a>
                    </td>
                    
                    <td>
                        <a asp-controller="Admin" asp-action="DeleteUser" asp-route-id="@item.Id" class="delete">
                            Delete
                        </a>
                    </td>
                </tr>
                }
                
            </tbody>
        </table>

    </div>
</div>
<!-- // Admin Content -->