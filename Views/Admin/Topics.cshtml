@model IEnumerable<Blog.Models.Topics>
@{
    ViewData["Title"] = "Topics";
    Layout = "_AdminLayout";
}

<div class="admin-content clearfix">
    <div class="button-group">
        <a asp-controller="Admin" asp-action="CreateTopic" class="btn btn-sm">Add Topic</a>
        <a asp-controller="Admin" asp-action="Topics" class="btn btn-sm">Manage Topics</a>
    </div>
    <div class="">
        <h2 style="text-align: center;">Manage Topic</h2>

        <table>
            <thead>
            <th>N</th>
            <th>Name</th>
            <th colspan="2">Action</th>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr class="rec">
                    <td>1</td>
                    <td>
                        <a href="#">@item.Name</a>
                    </td>
                    <td>
                        <a asp-controller="Admin" asp-action="EditTopic" asp-route-id="@item.Id" class="edit">
                            Edit
                        </a>
                    </td>
                    <td>
                        <a asp-controller="Admin" asp-action="DeleteTopic" asp-route-id="@item.Id" class="delete">
                            Delete
                        </a>
                    </td>
                </tr>
                }
                
                
            </tbody>
        </table>

    </div>
</div>